<% students.each do |s| %>
	<div class="well">
		<h4><%= s.search("name").inner_text %></h4>
		<hr />
		<h5>Activity <small><%= s.search("activity").inner_text %></small></h5>
		<h5>Marking Period <small><%= s.search("marking_period").inner_text %></small></h5>
		<h5>Activity Number <small><%= s.search("activity_number").inner_text %></small></h5>
	</div>
<% end %>
<style type="text/css" media="print">
	.navbar, .col, .footer {
		display:none;
	}
	.well {
		width:100%;
	}
</style>
<!--
	Check activity
	Print it to screen if not already on screen
	Add Student name to array
	Print array in small text under Activity name
	Utilize JQuery to make drop down for activity roster (1 roster open at a time)
-->
<% @activity_arr = Array.new %>
<% students.each do |s| %>
	<% if @activity_arr.include?(s.search("activity").inner_text) %>
		<%= s.search("activity").inner_text %>
	<% else %>
		<% @activity_arr.push(s.search("activity").inner_text) %>
		Pushed: <%= s.search("activity").inner_text %>
	<% end %>
<% end %>