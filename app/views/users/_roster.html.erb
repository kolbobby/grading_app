<style type="text/css" media="print">
	.navbar, .col, .footer {
		display:none;
	}
	.well {
		width:100%;
	}
</style>
<script type="text/javascript">
	$(document).ready(function() {
		$('.activity_drop').each(function() {
			var cur = "";
			$(this).click(function() {
				var ele = $(this).parent('h4').parent('.well').children('.roster_student_list');

				if(cur != $(this).prop('id')) {
					$(cur).parent('h4').parent('.well').children('.roster_student_list').html("");
					cur = $(this).prop('id')
				}
				if(ele.html() == "")
					$.post('/load_student_roster', { activity: $(this).prop('id') }, function(r) { ele.html(r); });
				else
					ele.html("");
			});
		});
	})
</script>
<% @activity_arr = Array.new %>
<% students.each do |s| %>
	<% if !@activity_arr.include?(s.search("activity").inner_text) %>
		<!-- UTILIZE THIS FOR PRINTING THIS VALUE TO SCREEN ONCE -->
		<% @activity_arr.push(s.search("activity").inner_text) %>
		<div class="well">
			<h4><%= link_to s.search("activity").inner_text, '#', :id => "#{s.search("activity").inner_text}", :class => "activity_drop" %></h4>
			<div class="roster_student_list"></div>
		</div>
	<% end %>
<% end %>