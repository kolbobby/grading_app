$('#main-user-content').html("<div class='row'><span id='s_a_outer'><%= escape_javascript(link_to('add', '#', :id => 's_add')) %><span id='s_add_plain'>add</span></span> | <span id='s_as_outer'><%= escape_javascript(link_to('assign', '#', :id => 's_assign')) %><span id='s_assign_plain'>assign</span></span></div><div id='manage-students-content'></div>");
function change_tab(new_tab) {
	var title;
	var content;
	if(new_tab == 'add') {
		title = 'add student';
		content = '(<span id="s_a_bulk_outer"><%= escape_javascript(link_to("bulk", "#", :id => "s_a_bulk")) %></span> | <span id="s_a_single_outer"><%= escape_javascript(link_to("single", "#", :id => "s_a_single")) %></span>)';
	} else if(new_tab == 'assign') {
		title = 'assign student';
	}
	$('#manage-students-content').html("<div class='row'><h3>"+ title +"</h3><hr /><div class='row'>"+ content +"</div></div>");
}

$('#s_add').click(function() {
	change_tab('add');
	$(this).hide();
	$('#s_add_plain').show();
	$('#s_assign_plain').hide();
	$('#s_assign').show();

	return false;
});
$('#s_assign').click(function() {
	change_tab('assign');
	$(this).hide();
	$('#s_assign_plain').show();
	$('#s_add_plain').hide();
	$('#s_add').show();

	return false;
});

