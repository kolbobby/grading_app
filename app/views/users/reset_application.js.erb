var pass = prompt("Please enter your password to confirm this action.");
var confirmP;

$.ajaxSetup({async:false});
$.post('/confirm_password', { pass: pass }, function(r) { confirmP = r; });
$.ajaxSetup({async:true});

if(confirmP == "pass") {
	if(confirm("Are you sure you would like to reset the application? (final chance)")) {
		$.post('/confirm_reset_application', function(r) { alert(r); });
	}
} else {
	alert(confirmP);
	location.reload();
}