<div class="tabular">
	<% @users = User.all %>
	<% @users.each do |u| %>
		<% if u.id == 2 %>
			<div><label><input type="radio" name="coach" checked /><%= u.name %></label></div>
		<% else %>
			<div><label><input type="radio" name="coach" /><%= u.name %></label></div>
		<% end %>
	<% end %>
</div>
<br />
<div class="tabular_opp">
	<table id="manage-activities">
		<thead>
			<tr>
				<th></th>
				<th>Activity 1</th>
				<th>Activity 2</th>
				<th>Activity 3</th>
			</tr>
		</thead>
		<tbody>
			<% 4.times do |x| %>
				<tr>
					<td class="left-side">Marking Period <%= x + 1 %></td>
					<td><em>none</em></td>
					<td><em>none</em></td>
					<td class="right-side"><em>none</em></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<button id="edit-all-activities" class="act-btn">Edit All</button>
	<button id="save-activities" class="act-btn">Save</button>
</div>