<% if view %>
	<% @students = Student.all %>
	<% @students.each do |s| %>
		<tr id="<%= s.id %>">
			<td class="s_name"><%= link_to s.name, student_path(s) %></td>
			<td class="s_period"><%= s.period %></td>
			<td class="s_grade_level"><%= s.grade_level %></td>
			<td class="s_remove"><%= link_to 'x student', '#' %></td>
		</tr>
	<% end %>
<% else %>
	<div id="draggable-students">
		<% @students = Student.all %>
		<% @students.each do |s| %>

			<% if @students_xml.search("//student//name").inner_text != s.name %>
				<% activity = Activity.find(:first, :conditions => { :name => @students_xml.search("//student//activity").inner_text }) %>
				<% if activity.activity_number != 1 && activity.marking_period != 1 %>
					<div class="draggable"><span><%= "#{s.name}" %></span></div>
				<% end %>
			<% end %>
		<% end %>
	</div>
<% end %>