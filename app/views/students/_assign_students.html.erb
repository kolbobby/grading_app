<script type="text/javascript">
	$('ul#student_assign_teacher_list').children('li').children('span').each(function() {
		$(this).hover(
			function() {
				$(this).children('label').children('input').css({ 'display': 'inherit', 'position': 'absolute', 'left': '0' });
			},
			function() {
				$(this).children('label').children('input').hide();
			}
		);
	});
</script>