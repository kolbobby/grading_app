var prim = "prim_1";
var sec = "sec_1";
$(document).ready(function() {
	$('#coach-nav > ul').children('li').children('span').each(function() {
		$(this).children('label').children('input').change(function() {
			resetLvl('prim');
			resetLvl('sec');
			$('#prim_1').css({ 'color': 'black', 'cursor': 'default' });
			$('#sec_1').css({ 'color': 'black', 'cursor': 'default' });
			prim = "prim_1";
			sec = "sec_1";
			$('.selected_coach').html($(this).attr('value'));
		});
	});
	$('.prim').children('span').each(function() {
		$(this).click(function() {
			resetLvl('prim');
			resetLvl('sec');
			$(this).css({ 'color': 'black', 'cursor': 'default' });
			$('#sec_1').css({ 'color': 'black', 'cursor': 'default' });
			prim = $(this).attr('id');
			sec = "sec_1";
		});
	});
	$('.sec').children('span').each(function() {
		$(this).click(function() {
			resetLvl('sec');
			$(this).css({ 'color': 'black', 'cursor': 'default' });
			sec = $(this).attr('id');
		});
	});

	$('button').click(function() {
		alert(prim.substring(prim.length - 1, prim.length) + ", " + sec.substring(sec.length - 1, sec.length));
	});

	prim = "prim_1";
	sec = "sec_1";
})

function resetLvl(type) {
	$('.'+type).children('span').each(function() {
		$(this).css({ 'color': 'blue', 'cursor': 'pointer' });
	});
}